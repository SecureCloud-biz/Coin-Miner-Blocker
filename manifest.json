{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Coin Mining Blocker",
  "description": "Block JavaScript coin mining scripts at network level",

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "alarms",
    "webNavigation",
    "*://*/*"
  ],

  "homepage_url": "http://add0n.com/mining-blocker.html",

  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "18": "data/icons/18.png",
      "19": "data/icons/19.png",
      "32": "data/icons/32.png",
      "64": "data/icons/64.png"
    }
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
